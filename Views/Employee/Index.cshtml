@model IEnumerable<EmployeeMgmt.Models.Employee>;

@{
  ViewData["Title"] = "Employees";
}

<div>
  <h1>All Employees</h1>
  <div class="table-responsive">
    <table class="table-hover table stripped">
      <thead>
        <tr class="text-center">
          <th>Employee ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Phone Number</th>
          <th colspan="2">Action</th>
        </tr>
      </thead>
      <tbody>
        @foreach(Employee employee in Model)
        {
         <tr>
          <td title="@employee.Id">@employee.Id.ToString().Substring(0,20)...</td>
          <td>@employee.FristName</td>
          <td>@employee.LastName</td>
          <td>@employee.PhoneNumber</td>
          <td><a asp-controller="Employee" asp-action="Edit" class="btn btn-success">Edit</a></td>
          <td><a asp-controller="Employee" asp-action="Delete" class="btn btn-danger">Delete</a></td>
         </tr>
        }
      </tbody>
    </table>
  </div>
</div>