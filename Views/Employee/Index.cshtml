@model IEnumerable<EmployeeMgmt.Models.Employee>;

@{
  ViewData["Title"] = "Employees";
}

<div class="shadow p-4">

  <div class="d-flex shadow border-2 border-bottom px-2 my-4 align-items-center justify-content-between">
    <h1>Employees</h1>
    <a asp-controller="Employee" asp-action="Add" class="btn btn-primary">Add New</a>
  </div>

  <div class="table-responsive">
    <table class="table-hover  text-center table stripped">
      <thead>
        <tr>
          <th>Employee ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Phone Number</th>
          <th>Company</th>
          <th colspan="2">Action</th>
        </tr>
      </thead>
      <tbody>
        @foreach(Employee employee in Model)
        {
         <tr>
          <td title="@employee.Id">@employee.Id.ToString().Substring(0,20)...</td>
          <td>@employee.FristName</td>
          <td>@employee.LastName</td>
          <td>@employee.PhoneNumber</td>
          <td>@employee.Company?.Name</td>
          <td><a asp-controller="Employee" asp-action="Edit" asp-route-emp_id="@employee.Id" class="btn btn-success">Edit</a></td>
          <td><a asp-controller="Employee" onclick="return confirm('Delete employee?');" asp-action="Delete" asp-route-emp_id="@employee.Id" class="btn btn-danger">Delete</a></td>
         </tr>
        }
      </tbody>
    </table>
  </div>
</div>