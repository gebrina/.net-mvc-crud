@model EmployeeMgmt.Models.Company;

@{
    ViewData["Title"] ="New Company";
}

<div class="container">
   <div class="col-md-6 shadow  p-4  mx-auto">
     <h1 class="text-primary text-center">New Company</h1>
    <form asp-action="Add" method="post">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input class="form-control" asp-for="Name" type="text">
        </div>

        <div class="form-group my-4">
            <label asp-for="Address">Address</label>
            <input class="form-control" asp-for="Address" type="text">
        </div>

       <button class="btn w-100 btn-primary">Save</button>
    </form>
   </div>
</div>